<div class="container">	
	<div class="jumbotron"> 
		<img src="/assets/images/hqdefault.jpg"> 
		<h1>Welcome to the Krusty Krab! </h1>
	</div>

	{{!-- Available Krabby Patties --}}
	<div class="row">
		<div class="col-md-4 col-md-offset-1">
			<div class="panel-panel default">
				<ul class="list-group">
				{{#each burgers}}
					{{#unless this.devoured}}
					<li class="list-group-item">
						<div class="input-group">
							<p class="lead"> {{this.burger_name}} </p>


			<span class="input-group-btn">
			<form action="burgers/update/{{this.id}}?_method=PUT" method="POST">


			<input type="hidden" name="devoured" value="true">


			<button class="btn btn-default btn-lg" type="submit"> Order This!! </button>


			</form>
							</span>
						</div>
					</li>
					{{/unless}}
				{{/each}}
			</ul>
		</div>
	</div>


		{{!-- krabby patties left after being eaten --}}
	<div class="row">
		<div class="col-md-4 col-md-offset-2">
			<div class="panel panel-default">
				<ul class="list-group">
				{{#each burgers}}
					{{#if this.devoured}}
					<li class="list-group-item">
						<p class="lead">{{this.burger_name}} </p>
					</li>


	{{/if}}
	{{/each}}
				</ul>
			</div>
		</div>
	</div>

	<div class="col-md-10 col-md-offset-1">
		<p class="lead"> Type the Krusty Krab Burger of Choice and hit "Submit" </p>

		{{!-- section to add krabby patties --}}
		<form class="create-update-form" action="burgers/create" method="POST">

			
			
			<div class="form-group">
			<textarea class="form-control input-lg" type="text" name="b_name" rows="3"> </textarea>
			</div>

			<button class="btn btn-default btn-lg" type="submit">Add Krabby Patty!</button>
		</form>

		
	</div>
</div>